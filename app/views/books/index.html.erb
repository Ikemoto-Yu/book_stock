<h1>トップページ</h1>

    <ul class='lists-right'>
      <% if user_signed_in? %>
       <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li> 
       <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li> 
      <%  else %>
      <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
      <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>

<%= form_with(url: '#' , local: true, method: :get, class: "search-form") do |form| %>
  <% form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
  <% form.submit "検索" , class: "search-btn" %>
<% end %>

<% unless @books.empty? %>
<% @books.each do |book| %>


    <div class="book-contents-image">
        <%= link_to "詳細ページ",book_path(book.id) %>
      <span><%= image_tag book.image, class: "item-image" %></span>
      <% if  user_signed_in? %>

        <% if book.user.id == current_user.id %>
        <ul class="more_list">
          <li>
            <%= link_to '削除', "/books/#{book.id}", method: :delete %>
          </li>
          <li>
            <%= link_to '編集', edit_book_path(book.id) , method: :get %>
          </li>
        </ul>

        <% else %>
                      <%= link_to "購入画面に進む", "#", class:"item-sell-btn" %>
        <% end %>

      <% end %>
    </div>

<% end %>

<% else %>

<h1>本を投稿しよう</h1>

<% end %>
